<?xml version="1.0" encoding="UTF-8"?>
<edxlDistribution xlink:type="extended"
                  xmlns="urn:oasis:names:tc:emergency:EDXL:DE:2.0"
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                  xmlns:ct="urn:oasis:names:tc:emergency:edxl:ct:1.0">
  {{#with message.distribution}}
  <distributionID>{{ id }}</distributionID>
  <senderID>{{ emetteur }}</senderID>
  <dateTimeSent>{{ dateEmission }}</dateTimeSent>
  <dateTimeExpires>{{ dateExpiration }}</dateTimeExpires>
  <distributionStatus>{{ statut }}</distributionStatus>
  <distributionKind>{{ type }}</distributionKind>
  <descriptor xlink:type="resource">
    <language>fr-FR</language>
    <explicitAddress>
      <explicitAddressScheme>sge</explicitAddressScheme>
       {{#each destinataires }}
      <explicitAddressValue>{{ this }}</explicitAddressValue>
       {{/each }}
    </explicitAddress>
  </descriptor>
  {{/with }}
  <content xlink:type="resource">
    <contentObject xlink:type="resource">
      <contentXML>
        <embeddedXMLContent>
          {{{ message.contenu }}}
        </embeddedXMLContent>
      </contentXML>
    </contentObject>
  </content>
</edxlDistribution>
